        });
        rotationSlider.addEventListener('input', (event) => {
          const angle = parseInt(event.target.value, 10);
          imageOverlay.setRotation(angle);
        });
        dropdown.addEventListener('change', function(event) {
          selectedValueDropdown = event.target.value;
          console.log('Selected value:', selectedValueDropdown);

          if (selectedValueDropdown === FloorPlanOptions.FLOORS) {
            sliderContainer.style.display = "block";
            saveFloorBtn.style.display = "block";
            savePathBtn.style.display = "none";
            addFloorBtn.style.display = "block";
            for (const overlay of overlays.values()) {
              overlay.img.style.opacity = "30%";
            }
            overlays.get(currentFloorNum).markers.northEast.setMap(map);
            overlays.get(currentFloorNum).markers.southWest.setMap(map);
            if(mapOnCLickListener) {
              google.maps.event.removeListener(mapOnCLickListener);
              mapOnCLickListener = null;
            }
            for (const marker of poiMarkers) {
              marker.map = null;
            }
          } else if (selectedValueDropdown === FloorPlanOptions.POINTS_OF_INTEREST) {
            if(mapOnCLickListener) {
              google.maps.event.removeListener(mapOnCLickListener);
              mapOnCLickListener = null;
