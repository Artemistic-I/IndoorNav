        displayFloorPlan(0);

        const saveFloorBtn = createSaveBtn(map);
        saveFloorBtn.classList.add("button", "button-primary");
        saveFloorBtn.style.padding = "10px";
        saveFloorBtn.style.borderRadius = "4px";
        saveFloorBtn.style.fontSize = "18px";
        saveFloorBtn.style.backgroundColor = "orange";
        saveFloorBtn.style.border = "1px solid black"

        const savePathBtn = document.createElement("button");
        savePathBtn.type = "button";
        savePathBtn.textContent = "Save paths";
        savePathBtn.style.color = "black";
        savePathBtn.style.padding = "10px";
        savePathBtn.style.borderRadius = "4px";
        savePathBtn.style.marginTop = "20px";
        savePathBtn.style.fontSize = "18px";
        savePathBtn.style.backgroundColor = favColor;
        savePathBtn.style.border = "1px solid black"
